#!/usr/bin/env node

/*** Module dependencies.*/
import app from '../app.js';
import http from 'http';

/*** get port from the environment and stores it in Express.*/
const port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**this creates the server for HTTP */
const server = http.createServer(app);

/*** This allows for the server to listen on the network port 300*/
server.listen(port, () => {
  console.log(`Server running at http://127.0.0.1:${port}/`);
});

/*** normalize a port into a number, string, or false.*/
function normalizePort(val) {
  const port = parseInt(val, 10);
  if (isNaN(port)) {
    return val;
  }
  if (port >= 0) {
    return port;
  }
  return false;
}
